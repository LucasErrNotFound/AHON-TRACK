<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="AHON_TRACK.Views.DashboardView"
	x:DataType="vm:DashboardViewModel"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:AHON_TRACK.ViewModels"
	xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
	xmlns:avalonia="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
	xmlns:converters="clr-namespace:AHON_TRACK.Converters"
	xmlns:dashboard="clr-namespace:AHON_TRACK.Components.Dashboard"
	xmlns:scroll="using:Xaml.Behaviors.Interactions.Animated"
	d:DesignWidth="2080"
	d:DesignHeight="1666"
	mc:Ignorable="d">

	<UserControl.Resources>
		<SolidColorBrush x:Key="MutedColor" Color="#2C2F36" Opacity="0.70"/>
		<SolidColorBrush x:Key="FontForeground" Color="#2C2F36"/>
		<SolidColorBrush x:Key="ForegroundColor" Color="#2C2F36"/>

		<SolidColorBrush x:Key="PrimaryColor" Color="#2C2F36"/>
		<SolidColorBrush x:Key="PrimaryColor75" Color="#2C2F36" Opacity="0.75"/>
		<SolidColorBrush x:Key="PrimaryColor50" Color="#2C2F36" Opacity="0.50"/>
		<SolidColorBrush x:Key="PrimaryColor10" Color="#2C2F36" Opacity="0.10"/>
	</UserControl.Resources>

	<DockPanel LastChildFill="True">
		<StackPanel
            MaxWidth="{StaticResource PageMaxWidth}"
            Margin="{StaticResource PageMargin}"
            DockPanel.Dock="Top">
			<TextBlock
				FontSize="30"
				FontWeight="SemiBold"
				Text="Dashboard"
				Margin="90,30"/>
		</StackPanel>
		<ScrollViewer>
			<Interaction.Behaviors>
				<scroll:VerticalScrollViewerAnimatedBehavior/>
			</Interaction.Behaviors>
			<StackPanel MaxWidth="{StaticResource PageMaxWidth}" Margin="48,0,48,0" Spacing="16">
				<TabControl Margin="45,10">
					<TabControl.Items>
						<TabItem Header="Overview">
							<StackPanel>
								<shadui:BreakpointViewPort>
									<!-- Extra large and up breakpoint (1280 px and above). -->
									<shadui:BreakpointView Breakpoint="XlAndUp">
										<UniformGrid Margin="-6,0" Columns="4">
											<UniformGrid.Resources>
												<LinearGradientBrush x:Key="GreenGradient" StartPoint="0%,50%" EndPoint="100%, 50%">
													<GradientStop Color="#22C55E" Offset="0.0"/>
													<GradientStop Color="#4CAF50" Offset="1.0"/>
												</LinearGradientBrush>

												<LinearGradientBrush x:Key="BlueGradient" StartPoint="0%,50%" EndPoint="100%,50%">
													<GradientStop Color="#64B5F6" Offset="0.0"/>
													<GradientStop Color="#2196F3" Offset="1.0"/>
												</LinearGradientBrush>

												<LinearGradientBrush x:Key="OrangeGradient" StartPoint="0%,50%" EndPoint="100%,50%">
													<GradientStop Color="#FFB74D" Offset="0.0"/>
													<GradientStop Color="#FF9800" Offset="1.0"/>
												</LinearGradientBrush>

												<LinearGradientBrush x:Key="PurpleGradient" StartPoint="0%,50%" EndPoint="100%,50%">
													<GradientStop Color="#BA68C8" Offset="0.0"/>
													<GradientStop Color="#9C27B0" Offset="1.0"/>
												</LinearGradientBrush>
											</UniformGrid.Resources>

											<dashboard:OverviewCard
															Title="Total Revenue"
															CardBackground="{StaticResource GreenGradient}"
															Foreground="White"
															Hint="{CompiledBinding RevenueGrowth, StringFormat='+{0}% from last month'}"
															Value="{CompiledBinding TotalRevenue, StringFormat='₱{0:N2}'}">
												<dashboard:OverviewCard.Icon>
													<Svg
														Width="30"
														Height="30"
														Path="/Assets/DashboardView/philippine-peso-icon.svg"
														Opacity="0.5"/>
												</dashboard:OverviewCard.Icon>
											</dashboard:OverviewCard>
											<dashboard:OverviewCard
												Title="Member Subscriptions"
												CardBackground="{StaticResource BlueGradient}"
												Foreground="White"
												Hint="{CompiledBinding SubscriptionsGrowth, StringFormat='+{0}% from last month'}"
												Value="{CompiledBinding MemberSubscriptions, StringFormat='+{0}'}">
												<dashboard:OverviewCard.Icon>
													<Svg
														Width="30"
														Height="30"
														Path="/Assets/DashboardView/member-subscriptions-icon.svg"/>
												</dashboard:OverviewCard.Icon>
											</dashboard:OverviewCard>
											<dashboard:OverviewCard
												Title="Sales"
												CardBackground="{StaticResource PurpleGradient}"
												Foreground="White"
												Hint="{CompiledBinding SalesGrowth, StringFormat='+{0}% from last month'}"
												Value="{CompiledBinding SalesCount, StringFormat='+{0}'}">
												<dashboard:OverviewCard.Icon>
													<Svg
														Width="30"
														Height="30"
														Path="/Assets/DashboardView/sales-icon.svg"/>
												</dashboard:OverviewCard.Icon>
											</dashboard:OverviewCard>
											<dashboard:OverviewCard
												Title="Active Now"
												CardBackground="{StaticResource OrangeGradient}"
												Foreground="White"
												Hint="{CompiledBinding ActiveNowGrowth, StringFormat='+{0}% since yesterday'}"
												Value="{CompiledBinding ActiveNow, StringFormat='+{0}'}">
												<dashboard:OverviewCard.Icon>
													<Svg
														Width="30"
														Height="30"
														Path="/Assets/DashboardView/active-now-icon.svg"/>
												</dashboard:OverviewCard.Icon>
											</dashboard:OverviewCard>
										</UniformGrid>
									</shadui:BreakpointView>

									<!-- Extra large and down breakpoint (less than 1280 px). -->
									<shadui:BreakpointView Breakpoint="XlAndDown">
										<UniformGrid Margin="-6,0" Columns="2">
											<UniformGrid.Resources>
												<LinearGradientBrush x:Key="GreenGradient" StartPoint="0%,50%" EndPoint="100%, 50%">
													<GradientStop Color="#22C55E" Offset="0.0"/>
													<GradientStop Color="#4CAF50" Offset="1.0"/>
												</LinearGradientBrush>

												<LinearGradientBrush x:Key="BlueGradient" StartPoint="0%,50%" EndPoint="100%,50%">
													<GradientStop Color="#64B5F6" Offset="0.0"/>
													<GradientStop Color="#2196F3" Offset="1.0"/>
												</LinearGradientBrush>

												<LinearGradientBrush x:Key="OrangeGradient" StartPoint="0%,50%" EndPoint="100%,50%">
													<GradientStop Color="#FFB74D" Offset="0.0"/>
													<GradientStop Color="#FF9800" Offset="1.0"/>
												</LinearGradientBrush>

												<LinearGradientBrush x:Key="PurpleGradient" StartPoint="0%,50%" EndPoint="100%,50%">
													<GradientStop Color="#BA68C8" Offset="0.0"/>
													<GradientStop Color="#9C27B0" Offset="1.0"/>
												</LinearGradientBrush>
											</UniformGrid.Resources>

											<dashboard:OverviewCard
															Title="Total Revenue"
															CardBackground="{StaticResource GreenGradient}"
															Foreground="White"
															FontWeight="SemiBold"
															Hint="{CompiledBinding RevenueGrowth, StringFormat='+{0}% from last month'}"
															Value="{CompiledBinding TotalRevenue, StringFormat='₱{0:N0}'}">
												<dashboard:OverviewCard.Icon>
													<Svg
														Width="30"
														Height="30"
														Path="/Assets/DashboardView/philippine-peso-icon.svg"
														Opacity="0.5"/>
												</dashboard:OverviewCard.Icon>
											</dashboard:OverviewCard>
											<dashboard:OverviewCard
												Title="Member Subscriptions"
												CardBackground="{StaticResource BlueGradient}"
												Foreground="White"
												Hint="{CompiledBinding SubscriptionsGrowth, StringFormat='+{0}% from last month'}"
												Value="{CompiledBinding MemberSubscriptions, StringFormat='+{0}'}">
												<dashboard:OverviewCard.Icon>
													<Svg
														Width="30"
														Height="30"
														Path="/Assets/DashboardView/member-subscriptions-icon.svg"/>
												</dashboard:OverviewCard.Icon>
											</dashboard:OverviewCard>
											<dashboard:OverviewCard
												Title="Sales"
												CardBackground="{StaticResource PurpleGradient}"
												Foreground="White"
												Hint="{CompiledBinding SalesGrowth, StringFormat='+{0}% from last month'}"
												Value="{CompiledBinding SalesCount, StringFormat='+{0}'}">
												<dashboard:OverviewCard.Icon>
													<Svg
														Width="30"
														Height="30"
														Path="/Assets/DashboardView/sales-icon.svg"/>
												</dashboard:OverviewCard.Icon>
											</dashboard:OverviewCard>
											<dashboard:OverviewCard
												Title="Active Now"
												CardBackground="{StaticResource OrangeGradient}"
												Foreground="White"
												Hint="{CompiledBinding ActiveNowGrowthFormatted}"
												Value="{CompiledBinding ActiveNow, StringFormat='+{0}'}">
												<dashboard:OverviewCard.Icon>
													<Svg
														Width="30"
														Height="30"
														Path="/Assets/DashboardView/active-now-icon.svg"/>
												</dashboard:OverviewCard.Icon>
											</dashboard:OverviewCard>
										</UniformGrid>
									</shadui:BreakpointView>
								</shadui:BreakpointViewPort>
								<shadui:BreakpointViewPort>
									<!-- Extra large and up breakpoint (1280 px and above). -->
									<shadui:BreakpointView Breakpoint="XlAndUp">
										<Grid Margin="-8,20" ColumnDefinitions="3* 2*">
											<Border
												Margin="8"
												Background="{DynamicResource CardBackgroundColor}"
												BorderBrush="{DynamicResource BorderColor}"
												BorderThickness="1"
												BoxShadow="{DynamicResource Shadow}"
												CornerRadius="{DynamicResource 2XlCornerRadius}">
												<DockPanel>
													<TextBlock
														Margin="24,24,24,12"
														DockPanel.Dock="Top"
														FontSize="17"
														FontWeight="Bold"
														Text="2025 Sales Overview"/>
													<ComboBox
														Margin="20,-35,30,0"
														HorizontalAlignment="Right"
														HorizontalContentAlignment="Center"
														Width="100"
														DockPanel.Dock="Top"
														ItemsSource="{CompiledBinding AvailableYears}"
														SelectedIndex="{CompiledBinding SelectedYearIndex}">
														<ComboBoxItem>2025</ComboBoxItem>
														<ComboBoxItem>2026</ComboBoxItem>
														<ComboBoxItem>2027</ComboBoxItem>
														<ComboBoxItem>2028</ComboBoxItem>
														<ComboBoxItem>2029</ComboBoxItem>
														<ComboBoxItem>2030</ComboBoxItem>
													</ComboBox>
													<avalonia:CartesianChart
														Height="445"
														Name="CartesianChart1"
														Margin="12,0,12,12"
														Series="{CompiledBinding Series}"
														XAxes="{CompiledBinding XAxes}"
														YAxes="{CompiledBinding YAxes}"
														TooltipTextSize="14"/>
												</DockPanel>
											</Border>
											<Border
												Grid.Column="1"
												Margin="8"
												Background="{DynamicResource CardBackgroundColor}"
												BorderBrush="{DynamicResource BorderColor}"
												BorderThickness="1"
												BoxShadow="{DynamicResource Shadow}"
												CornerRadius="{DynamicResource 2XlCornerRadius}">
												<DockPanel x:Name="RecentSalesCard1" Height="500">
													<DockPanel.Resources>
														<converters:StringToBitmapConverter x:Key="StringToBitMapConverter"/>
													</DockPanel.Resources>
													<StackPanel
														Margin="40,25"
														DockPanel.Dock="Top"
														Spacing="8">
														<TextBlock
															FontSize="17"
															FontWeight="Bold"
															Text="Recent Sales" />
														<TextBlock Classes="Caption Muted" FontSize="14" Text="{CompiledBinding SalesSummary}"/>
													</StackPanel>
													<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
														<Interaction.Behaviors>
															<scroll:VerticalScrollViewerAnimatedBehavior/>
														</Interaction.Behaviors>
														<ItemsControl Margin="40,0,24,24" ItemsSource="{CompiledBinding RecentSales}">

															<!-- Define the item container style -->
															<ItemsControl.ItemsPanel>
																<ItemsPanelTemplate>
																	<StackPanel Spacing="24" />
																</ItemsPanelTemplate>
															</ItemsControl.ItemsPanel>

															<!-- Define the template for each item -->
															<ItemsControl.ItemTemplate>
																<DataTemplate>
																	<Grid ColumnDefinitions="230 * 100">
																		<!-- Customer Info Column -->
																		<StackPanel
																			Grid.Column="0"
																			Orientation="Horizontal"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left">
																			<shadui:Avatar
																				Width="36"
																				Height="36"
																				VerticalAlignment="Center"
																				Source="{CompiledBinding AvatarSource}"/>
																			<StackPanel Margin="15,0">
																				<TextBlock
																					Classes="Small"
																					FontSize="15"
																					FontWeight="SemiBold"
																					Text="{CompiledBinding CustomerName}"/>
																				<TextBlock
																					Classes="Caption Muted"
																					FontSize="13"
																					Text="{CompiledBinding CustomerType}"/>
																			</StackPanel>
																		</StackPanel>

																		<!-- Product Name Column -->
																		<TextBlock
																			Grid.Column="1"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left"
																			FontSize="15"
																			FontWeight="SemiBold"
																			Text="{CompiledBinding ProductName}"/>

																		<!-- Amount Column -->
																		<TextBlock
																			Grid.Column="2"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Right"
																			FontSize="15"
																			FontWeight="Bold"
																			Foreground="{DynamicResource SuccessColor}"
																			Text="{CompiledBinding FormattedAmount}"/>
																	</Grid>
																</DataTemplate>
															</ItemsControl.ItemTemplate>
														</ItemsControl>
													</ScrollViewer>
												</DockPanel>
											</Border>
										</Grid>
									</shadui:BreakpointView>
									<!-- Extra large and down breakpoint (less than 1280 px). -->
									<shadui:BreakpointView Breakpoint="XlAndDown">
										<Grid Margin="-8,20" RowDefinitions="* *">
											<Border
												Margin="8"
												Background="{DynamicResource CardBackgroundColor}"
												BorderBrush="{DynamicResource BorderColor}"
												BorderThickness="1"
												BoxShadow="{DynamicResource Shadow}"
												CornerRadius="{DynamicResource 2XlCornerRadius}">
												<DockPanel>
													<TextBlock
														Margin="24,24,24,12"
														DockPanel.Dock="Top"
														FontSize="17"
														FontWeight="Bold"
														Text="2025 Sales Overview"/>
													<ComboBox
														Margin="20,-35,30,0"
														HorizontalAlignment="Right"
														HorizontalContentAlignment="Center"
														Width="100"
														DockPanel.Dock="Top"
														ItemsSource="{CompiledBinding AvailableYears}"
														SelectedIndex="{CompiledBinding SelectedYearIndex}">
														<ComboBoxItem>2025</ComboBoxItem>
														<ComboBoxItem>2026</ComboBoxItem>
														<ComboBoxItem>2027</ComboBoxItem>
														<ComboBoxItem>2028</ComboBoxItem>
														<ComboBoxItem>2029</ComboBoxItem>
														<ComboBoxItem>2030</ComboBoxItem>
													</ComboBox>
													<avalonia:CartesianChart
														Height="445"
														Name="CartesianChart2"
														Margin="12,0,12,12"
														Series="{CompiledBinding Series}"
														XAxes="{CompiledBinding XAxes}"
														YAxes="{CompiledBinding YAxes}"
														TooltipTextSize="14"/>
												</DockPanel>
											</Border>
											<Border
												Grid.Row="1"
												Margin="8"
												Background="{DynamicResource CardBackgroundColor}"
												BorderBrush="{DynamicResource BorderColor}"
												BorderThickness="1"
												BoxShadow="{DynamicResource Shadow}"
												CornerRadius="{DynamicResource 2XlCornerRadius}">
												<DockPanel x:Name="RecentSalesCard2" Height="500">
													<DockPanel.Resources>
														<converters:StringToBitmapConverter x:Key="StringToBitMapConverter"/>
													</DockPanel.Resources>
													<StackPanel
														Margin="40,25"
														DockPanel.Dock="Top"
														Spacing="8">
														<TextBlock
																FontSize="17"
																FontWeight="Bold"
																Text="Recent Sales" />
														<TextBlock Classes="Caption Muted" FontSize="14" Text="{CompiledBinding SalesSummary}"/>
													</StackPanel>
													<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
														<Interaction.Behaviors>
															<scroll:VerticalScrollViewerAnimatedBehavior/>
														</Interaction.Behaviors>
														<ItemsControl Margin="40,0,24,24" ItemsSource="{CompiledBinding RecentSales}">

															<!-- Define the item container style -->
															<ItemsControl.ItemsPanel>
																<ItemsPanelTemplate>
																	<StackPanel Spacing="24" />
																</ItemsPanelTemplate>
															</ItemsControl.ItemsPanel>

															<!-- Define the template for each item -->
															<ItemsControl.ItemTemplate>
																<DataTemplate>
																	<Grid ColumnDefinitions="230 * 100">
																		<!-- Customer Info Column -->
																		<StackPanel
																			Grid.Column="0"
																			Orientation="Horizontal"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left">
																			<shadui:Avatar
																				Width="36"
																				Height="36"
																				VerticalAlignment="Center"
																				Source="{CompiledBinding AvatarSource}"/>
																			<StackPanel Margin="15,0">
																				<TextBlock
																					Classes="Small"
																					FontSize="15"
																					FontWeight="SemiBold"
																					Text="{CompiledBinding CustomerName}"/>
																				<TextBlock
																					Classes="Caption Muted"
																					FontSize="13"
																					Text="{CompiledBinding CustomerType}"/>
																			</StackPanel>
																		</StackPanel>

																		<!-- Product Name Column -->
																		<TextBlock
																			Grid.Column="1"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left"
																			FontSize="15"
																			FontWeight="SemiBold"
																			Text="{CompiledBinding ProductName}"/>

																		<!-- Amount Column -->
																		<TextBlock
																			Grid.Column="2"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Right"
																			FontSize="15"
																			FontWeight="Bold"
																			Foreground="{DynamicResource SuccessColor}"
																			Text="{CompiledBinding FormattedAmount}"/>
																	</Grid>
																</DataTemplate>
															</ItemsControl.ItemTemplate>
														</ItemsControl>
													</ScrollViewer>
												</DockPanel>
											</Border>
										</Grid>
									</shadui:BreakpointView>
								</shadui:BreakpointViewPort>
								<shadui:BreakpointViewPort>
									<!-- Extra large and up breakpoint (1280 px and above). -->
									<shadui:BreakpointView Breakpoint="XlAndUp">
										<Grid Margin="-8,0" ColumnDefinitions="4.7* 2*">
											<Border
												Grid.Column="0"
												Margin="8"
												Background="{DynamicResource CardBackgroundColor}"
												BorderBrush="{DynamicResource BorderColor}"
												BorderThickness="1"
												BoxShadow="{DynamicResource Shadow}"
												CornerRadius="{DynamicResource 2XlCornerRadius}">
												<DockPanel Height="500">
													<DockPanel.Resources>
														<converters:StringToBitmapConverter x:Key="StringToBitMapConverter"/>
													</DockPanel.Resources>
													<StackPanel
														Margin="40,25"
														DockPanel.Dock="Top"
														Spacing="8">
														<TextBlock
																FontSize="17"
																FontWeight="Bold"
																Text="Upcoming Training Sessions"/>
														<TextBlock Classes="Caption Muted" FontSize="14" Text="{CompiledBinding TrainingSessionsSummary}"/>
													</StackPanel>
													<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
														<Interaction.Behaviors>
															<scroll:VerticalScrollViewerAnimatedBehavior/>
														</Interaction.Behaviors>
														<ItemsControl Margin="40,0,24,24" ItemsSource="{CompiledBinding UpcomingTrainingSessions}">
															<ItemsControl.ItemsPanel>
																<ItemsPanelTemplate>
																	<StackPanel Spacing="24"/>
																</ItemsPanelTemplate>
															</ItemsControl.ItemsPanel>
															<ItemsControl.ItemTemplate>
																<DataTemplate>
																	<Grid ColumnDefinitions="250 200 170 150 150">
																		<!-- Client Information Column -->
																		<StackPanel
																			Grid.Column="0"
																			Orientation="Horizontal"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left">
																			<StackPanel Margin="15,0">
																				<TextBlock
																					Classes="Small"
																					FontSize="15"
																					FontWeight="SemiBold"
																					Text="{CompiledBinding ClientName}"/>
																				<TextBlock
																					Classes="Caption Muted"
																					FontSize="13"
																					Text="{CompiledBinding MembershipType}"/>
																			</StackPanel>
																		</StackPanel>

																		<!-- Training Type Column -->
																		<TextBlock
																			Grid.Column="1"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left"
																			FontSize="15"
																			FontWeight="SemiBold"
																			Text="{CompiledBinding TrainingType}"/>

																		<!-- Location Column -->
																		<TextBlock
																			Grid.Column="2"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left"
																			FontSize="15"
																			FontWeight="SemiBold"
																			Text="{CompiledBinding Location}"/>

																		<!-- Time Slot Column -->
																		<TextBlock
																			Grid.Column="3"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left"
																			FontSize="15"
																			FontWeight="Bold"
																			Text="{CompiledBinding TimeSlot}"/>

																		<!-- Date Column -->
																		<TextBlock
																			Grid.Column="4"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Right"
																			FontSize="15"
																			FontWeight="Bold"
																			Foreground="{DynamicResource SuccessColor}"
																			Text="{CompiledBinding FormattedDate}"/>
																	</Grid>
																</DataTemplate>
															</ItemsControl.ItemTemplate>
														</ItemsControl>
													</ScrollViewer>
												</DockPanel>
											</Border>
											<Border
												Grid.Column="1"
												Margin="8"
												Background="{DynamicResource CardBackgroundColor}"
												BorderBrush="{DynamicResource BorderColor}"
												BorderThickness="1"
												BoxShadow="{DynamicResource Shadow}"
												CornerRadius="{DynamicResource 2XlCornerRadius}">
												<DockPanel x:Name="RecentLogs2" Height="500">
													<DockPanel.Resources>
														<converters:StringToBitmapConverter x:Key="StringToBitMapConverter"/>
													</DockPanel.Resources>
													<StackPanel
														Margin="40,25"
														DockPanel.Dock="Top"
														Spacing="8">
														<TextBlock
																FontSize="17"
																FontWeight="Bold"
																Text="Recent Logs"/>
														<TextBlock Classes="Caption Muted" FontSize="14" Text="{CompiledBinding RecentLogsSummary}"/>
													</StackPanel>
													<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
														<Interaction.Behaviors>
															<scroll:VerticalScrollViewerAnimatedBehavior/>
														</Interaction.Behaviors>
														<ItemsControl Margin="40,0,24,24" ItemsSource="{CompiledBinding RecentLogs}">

															<!-- Define the item container style -->
															<ItemsControl.ItemsPanel>
																<ItemsPanelTemplate>
																	<StackPanel Spacing="24"/>
																</ItemsPanelTemplate>
															</ItemsControl.ItemsPanel>

															<!-- Define the template for each item -->
															<ItemsControl.ItemTemplate>
																<DataTemplate>
																	<Grid ColumnDefinitions="Auto * Auto">
																		<!-- Staff/Admin Info Column -->
																		<StackPanel
																			Grid.Column="0"
																			Orientation="Horizontal"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left">
																			<shadui:Avatar
																				Width="36"
																				Height="36"
																				VerticalAlignment="Center"
																				Source="{CompiledBinding AvatarSource}"/>
																			<StackPanel Margin="15,0">
																				<TextBlock
																					Classes="Small"
																					FontSize="15"
																					FontWeight="SemiBold"
																					Text="{CompiledBinding Username}"/>
																				<TextBlock
																					Classes="Caption Muted"
																					FontSize="13"
																					Text="{CompiledBinding UserType}"/>
																			</StackPanel>
																		</StackPanel>

																		<!-- Action Log Column -->
																		<TextBlock
																			Grid.Column="1"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Right"
																			FontSize="13"
																			FontWeight="SemiBold"
																			TextWrapping="Wrap"
																			TextAlignment="Right"
																			Width="150"
																			Foreground="{DynamicResource SuccessColor}"
																			Text="{CompiledBinding ActionLogName}"/>
																	</Grid>
																</DataTemplate>
															</ItemsControl.ItemTemplate>
														</ItemsControl>
													</ScrollViewer>
												</DockPanel>
											</Border>
										</Grid>
									</shadui:BreakpointView>

									<!-- Extra large and down breakpoint (less than 1280 px). -->
									<shadui:BreakpointView Breakpoint="XlAndDown">
										<Grid Margin="-8,0" RowDefinitions="* *">
											<Border
												Grid.Row="0"
												Margin="8"
												Background="{DynamicResource CardBackgroundColor}"
												BorderBrush="{DynamicResource BorderColor}"
												BorderThickness="1"
												BoxShadow="{DynamicResource Shadow}"
												CornerRadius="{DynamicResource 2XlCornerRadius}">
												<DockPanel Height="500">
													<DockPanel.Resources>
														<converters:StringToBitmapConverter x:Key="StringToBitMapConverter"/>
													</DockPanel.Resources>
													<StackPanel
														Margin="40,25"
														DockPanel.Dock="Top"
														Spacing="8">
														<TextBlock
																FontSize="17"
																FontWeight="Bold"
																Text="Upcoming Training Sessions"/>
														<TextBlock Classes="Caption Muted" FontSize="14" Text="{CompiledBinding TrainingSessionsSummary}"/>
													</StackPanel>
													<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
														<Interaction.Behaviors>
															<scroll:VerticalScrollViewerAnimatedBehavior/>
														</Interaction.Behaviors>
														<ItemsControl Margin="40,0,24,24" ItemsSource="{CompiledBinding UpcomingTrainingSessions}">
															<ItemsControl.ItemsPanel>
																<ItemsPanelTemplate>
																	<StackPanel Spacing="24"/>
																</ItemsPanelTemplate>
															</ItemsControl.ItemsPanel>
															<ItemsControl.ItemTemplate>
																<DataTemplate>
																	<Grid ColumnDefinitions="250 200 170 150 150">
																		<!-- Client Information Column -->
																		<StackPanel
																			Grid.Column="0"
																			Orientation="Horizontal"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left">
																			<StackPanel Margin="15,0">
																				<TextBlock
																					Classes="Small"
																					FontSize="15"
																					FontWeight="SemiBold"
																					Text="{CompiledBinding ClientName}"/>
																				<TextBlock
																					Classes="Caption Muted"
																					FontSize="13"
																					Text="{CompiledBinding MembershipType}"/>
																			</StackPanel>
																		</StackPanel>

																		<!-- Training Type Column -->
																		<TextBlock
																			Grid.Column="1"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left"
																			FontSize="15"
																			FontWeight="SemiBold"
																			Text="{CompiledBinding TrainingType}"/>

																		<!-- Location Column -->
																		<TextBlock
																			Grid.Column="2"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left"
																			FontSize="15"
																			FontWeight="SemiBold"
																			Text="{CompiledBinding Location}"/>

																		<!-- Time Slot Column -->
																		<TextBlock
																			Grid.Column="3"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left"
																			FontSize="15"
																			FontWeight="Bold"
																			Text="{CompiledBinding TimeSlot}"/>

																		<!-- Date Column -->
																		<TextBlock
																			Grid.Column="4"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Right"
																			FontSize="15"
																			FontWeight="Bold"
																			Foreground="{DynamicResource SuccessColor}"
																			Text="{CompiledBinding FormattedDate}"/>
																	</Grid>
																</DataTemplate>
															</ItemsControl.ItemTemplate>
														</ItemsControl>
													</ScrollViewer>
												</DockPanel>
											</Border>
											<Border
												Grid.Row="1"
												Margin="8"
												Background="{DynamicResource CardBackgroundColor}"
												BorderBrush="{DynamicResource BorderColor}"
												BorderThickness="1"
												BoxShadow="{DynamicResource Shadow}"
												CornerRadius="{DynamicResource 2XlCornerRadius}">
												<DockPanel x:Name="RecentLogs1" Height="500">
													<DockPanel.Resources>
														<converters:StringToBitmapConverter x:Key="StringToBitMapConverter"/>
													</DockPanel.Resources>
													<StackPanel
														Margin="40,25"
														DockPanel.Dock="Top"
														Spacing="8">
														<TextBlock
																FontSize="17"
																FontWeight="Bold"
																Text="Recent Logs"/>
														<TextBlock Classes="Caption Muted" FontSize="14" Text="{CompiledBinding RecentLogsSummary}"/>
													</StackPanel>
													<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
														<Interaction.Behaviors>
															<scroll:VerticalScrollViewerAnimatedBehavior/>
														</Interaction.Behaviors>
														<ItemsControl Margin="40,0,24,24" ItemsSource="{CompiledBinding RecentLogs}">

															<!-- Define the item container style -->
															<ItemsControl.ItemsPanel>
																<ItemsPanelTemplate>
																	<StackPanel Spacing="24"/>
																</ItemsPanelTemplate>
															</ItemsControl.ItemsPanel>

															<!-- Define the template for each item -->
															<ItemsControl.ItemTemplate>
																<DataTemplate>
																	<Grid ColumnDefinitions="Auto * Auto">
																		<!-- Staff/Admin Info Column -->
																		<StackPanel
																			Grid.Column="0"
																			Orientation="Horizontal"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Left">
																			<shadui:Avatar
																				Width="36"
																				Height="36"
																				VerticalAlignment="Center"
																				Source="{CompiledBinding AvatarSource}"/>
																			<StackPanel Margin="15,0">
																				<TextBlock
																					Classes="Small"
																					FontSize="15"
																					FontWeight="SemiBold"
																					Text="{CompiledBinding Username}"/>
																				<TextBlock
																					Classes="Caption Muted"
																					FontSize="13"
																					Text="{CompiledBinding UserType}"/>
																			</StackPanel>
																		</StackPanel>

																		<!-- Action Log Column -->
																		<TextBlock
																			Grid.Column="1"
																			VerticalAlignment="Center"
																			HorizontalAlignment="Right"
																			FontSize="13"
																			FontWeight="SemiBold"
																			TextWrapping="Wrap"
																			TextAlignment="Right"
																			Width="150"
																			Foreground="{DynamicResource SuccessColor}"
																			Text="{CompiledBinding ActionLogName}"/>
																	</Grid>
																</DataTemplate>
															</ItemsControl.ItemTemplate>
														</ItemsControl>
													</ScrollViewer>
												</DockPanel>
											</Border>
										</Grid>
									</shadui:BreakpointView>
								</shadui:BreakpointViewPort>
							</StackPanel>
						</TabItem>
						<TabItem Header="Notifications">
							<shadui:Card MaxWidth="900" MaxHeight="820" Margin="0,15,0,0">
								<DockPanel Dock="Top" MaxHeight="720">
									<Button
										DockPanel.Dock="Top"
										Classes="Primary"
										HorizontalAlignment="Right"
										Margin="10,10,10,15"
										Content="Clear All Notifications"
										IsEnabled="{CompiledBinding Notifications.Count}"
										Command="{CompiledBinding ClearAllNotificationsCommand}" />
									<ScrollViewer>
										<Interaction.Behaviors>
											<scroll:VerticalScrollViewerAnimatedBehavior />
										</Interaction.Behaviors>
										<StackPanel>
											<StackPanel
												HorizontalAlignment="Center"
												VerticalAlignment="Center"
												Spacing="10"
												Margin="0,50,0,0"
												IsVisible="{Binding !Notifications.Count}">
												<TextBlock
													Text="No notifications yet"
													FontSize="20"
													FontWeight="SemiBold"
													HorizontalAlignment="Center"
													Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
												<TextBlock
													Text="You're all caught up! Check back later for updates."
													FontSize="14"
													HorizontalAlignment="Center"
													Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
											</StackPanel>

											<ItemsControl ItemsSource="{CompiledBinding Notifications}">
												<ItemsControl.ItemsPanel>
													<ItemsPanelTemplate>
														<StackPanel Orientation="Vertical" Spacing="25" />
													</ItemsPanelTemplate>
												</ItemsControl.ItemsPanel>
												<ItemsControl.ItemTemplate>
													<DataTemplate>
														<shadui:Card MaxWidth="900" Margin="0,0,10,0">
															<StackPanel>
																<Grid ColumnDefinitions="* * Auto Auto">
																	<shadui:Badge
																		Grid.Column="0"
																		HorizontalAlignment="Left"
																		Background="{CompiledBinding BadgeColor}"
																		Foreground="White"
																		Content="{CompiledBinding BadgeText}"
																		FontSize="14"
																		Padding="15,5" />
																	<Svg
																		Grid.Column="1"
																		HorizontalAlignment="Right"
																		Margin="0,0,7,0"
																		Width="20"
																		Height="20"
																		Path="avares://AHON_TRACK/Assets/DashboardView/clock.svg"
																		VerticalAlignment="Center" />
																	<TextBlock
																		Grid.Column="2"
																		HorizontalAlignment="Right"
																		Margin="0,0,7,0"
																		Classes="Caption Muted"
																		Text="{CompiledBinding FormattedDateTime}"
																		FontSize="14"
																		VerticalAlignment="Center" />
																	<Button
																		Grid.Column="3"
																		Classes="Icon"
																		Command="{CompiledBinding $parent[ItemsControl].((vm:DashboardViewModel)DataContext).DeleteNotificationCommand}"
																		CommandParameter="{CompiledBinding}">
																		<StackPanel>
																			<Svg
																				Width="20"
																				Height="20"
																				Path="avares://AHON_TRACK/Assets/DashboardView/trash-notif-icon.svg"
																				VerticalAlignment="Center" />
																		</StackPanel>
																	</Button>
																</Grid>
																<StackPanel Orientation="Vertical" Margin="0,15,0,0" Spacing="5">
																	<TextBlock
																		Text="{CompiledBinding Title}"
																		TextWrapping="WrapWithOverflow"
																		FontSize="15"
																		FontWeight="Bold" />
																	<TextBlock
																		Text="{CompiledBinding Message}"
																		TextWrapping="WrapWithOverflow"
																		FontSize="15"
																		FontWeight="Medium" />
																	<StackPanel Orientation="Horizontal" Spacing="40" Margin="0,20,0,0">
																		<TextBlock
																			Text="System Generated"
																			TextWrapping="WrapWithOverflow"
																			Foreground="{DynamicResource DestructiveColor}"
																			FontSize="15"
																			FontWeight="Bold" />
																		<TextBlock
																			Text="Notification"
																			TextWrapping="WrapWithOverflow"
																			Foreground="{DynamicResource InfoColor}"
																			FontSize="15"
																			FontWeight="Bold" />
																	</StackPanel>
																</StackPanel>
															</StackPanel>
														</shadui:Card>
													</DataTemplate>
												</ItemsControl.ItemTemplate>
											</ItemsControl>
										</StackPanel>

									</ScrollViewer>
								</DockPanel>
							</shadui:Card>
						</TabItem>
					</TabControl.Items>
				</TabControl>
			</StackPanel>
		</ScrollViewer>
	</DockPanel>
</UserControl>