                                                                                <TextBlock Text="Learn real boxing skills" FontSize="14"/>
                                                                            </StackPanel>
                                                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                                                <Svg
                                                                                    Width="24"
                                                                                    Height="24"
                                                                                    VerticalAlignment="Center"
                                                                                    Path="avares://AHON_TRACK/Assets/ManageBillingView/check-badge-icon.svg"/>
                                                                                <TextBlock Text="Stress relieving workouts" FontSize="14"/>
                                                                            </StackPanel>
                                                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                                                <Svg
                                                                                    Width="24"
                                                                                    Height="24"
