<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:converters="clr-namespace:AHON_TRACK.Converters"
    xmlns:viewModels="clr-namespace:AHON_TRACK.ViewModels"
    xmlns:scroll="using:Xaml.Behaviors.Interactions.Animated"
    x:DataType="viewModels:ProductPurchaseViewModel"
    mc:Ignorable="d" d:DesignWidth="1683" d:DesignHeight="1080"
    x:Class="AHON_TRACK.Views.ProductPurchaseView">

	<Design.DataContext>
		<viewModels:ProductPurchaseViewModel />
	</Design.DataContext>

	<UserControl.Resources>
		<SolidColorBrush x:Key="MutedColor" Color="#2C2F36" Opacity="0.70" />
		<SolidColorBrush x:Key="FontForeground" Color="#2C2F36" />
		<SolidColorBrush x:Key="ForegroundColor" Color="#2C2F36" />

		<SolidColorBrush x:Key="PrimaryColor" Color="#2C2F36" />
		<SolidColorBrush x:Key="PrimaryColor75" Color="#2C2F36" Opacity="0.75" />
		<SolidColorBrush x:Key="PrimaryColor50" Color="#2C2F36" Opacity="0.50" />
		<SolidColorBrush x:Key="PrimaryColor10" Color="#2C2F36" Opacity="0.10" />

		<SolidColorBrush x:Key="SuccessColor" Color="#22C55E" />
		<SolidColorBrush x:Key="SuccessColor60" Color="#22c55e" Opacity="0.6" />
		<SolidColorBrush x:Key="SuccessColor10" Color="#22c55e" Opacity="0.1" />

		<converters:IntToBoolConverter x:Key="IntToBoolConverter" />
		<converters:IntToInverseBoolConverter x:Key="IntToInverseBoolConverter" />
		<converters:DateToStringConverter x:Key="DateToStringConverter" />
	</UserControl.Resources>

	<UserControl.Styles>
		<Style Selector="TextBlock">
			<Setter Property="Foreground" Value="{DynamicResource FontForeground}"/>
		</Style>
	</UserControl.Styles>

	<DockPanel LastChildFill="True">
		<StackPanel
            MaxWidth="{StaticResource PageMaxWidth}"
            Margin="{StaticResource PageMargin}"
            DockPanel.Dock="Top">
			<TextBlock
                FontSize="30"
                FontWeight="SemiBold"
                Text="Product Purchase"
                Foreground="{StaticResource FontForeground}"
                Margin="90,30,0,0" />
			<TextBlock
                Classes="Caption Muted"
                FontSize="14"
                Text="Manage customer purchases of gym products and supplements"
                TextWrapping="Wrap"
                Margin="90,0" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Interaction.Behaviors>
                <scroll:VerticalScrollViewerAnimatedBehavior ScrollStepSize="150"/>
            </Interaction.Behaviors>
            <StackPanel MaxWidth="{StaticResource PageMaxWidth}" Margin="90,40,48,24" Spacing="16">
                <Grid ColumnDefinitions="* *" ColumnSpacing="30">
                    <shadui:Card Grid.Column="0" VerticalAlignment="Top" MaxHeight="855">
                        <StackPanel>
                            <shadui:CardTitle Content="Select a customer" />
                            <Grid ColumnDefinitions="Auto Auto" ColumnSpacing="10">
                                <TextBox
                                    Grid.Column="0"
                                    Width="300"
                                    HorizontalAlignment="Left"
                                    shadui:ControlAssist.ShowProgress="{CompiledBinding IsSearchingCustomer}"
                                    shadui:ControlAssist.Height="40"
                                    Classes="Clearable"
                                    Text="{CompiledBinding CustomerSearchStringResult, Mode=TwoWay}"
                                    FontSize="15"
                                    Watermark="Search customers...">
									<TextBox.InnerRightContent>
										<Svg
                                            Width="20"
                                            Opacity="0.75"
                                            Path="/Assets/ManageEmployeesView/search-icon.svg" />
									</TextBox.InnerRightContent>
								</TextBox>
								<ComboBox
                                    Grid.Column="1"
                                    Width="150"
                                    VerticalAlignment="Center"
                                    PlaceholderText="Filter"
                                    ItemsSource="{CompiledBinding CustomerTypeFilterItems}"
                                    SelectedItem="{CompiledBinding SelectedCustomerTypeFilterItem}"/>
                            </Grid>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                                <Interaction.Behaviors>
                                    <scroll:VerticalScrollViewerAnimatedBehavior ScrollStepSize="150"/>
                                </Interaction.Behaviors>
                                <DataGrid
                                    Height="730"
                                    Width="695"
                                    IsReadOnly="True"
                                    CanUserReorderColumns="False"
                                    CanUserSortColumns="False"
                                    GridLinesVisibility="All"
                                    ItemsSource="{CompiledBinding CustomerList}"
                                    SelectedItem="{CompiledBinding SelectedCustomer, Mode=TwoWay}"
                                    SelectionMode="Single"
                                    Background="{DynamicResource CardBackgroundColor}"
                                    RowBackground="{DynamicResource CardBackgroundColor}"
                                    HeadersVisibility="Column"
                                    Margin="0,10,0,0">

									<DataGrid.Columns>
										<DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="80"
                                            Header="ID"
                                            Binding="{CompiledBinding ID}" />
										<DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="185"
                                            Header="First Name"
                                            Binding="{CompiledBinding FirstName}" />
										<DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="185"
                                            Header="Last Name"
                                            Binding="{CompiledBinding LastName}" />
										<DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="243"
                                            Header="Customer Type"
                                            Binding="{CompiledBinding CustomerType}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </StackPanel>
                    </shadui:Card>
                    <shadui:Card Grid.Column="1" Margin="0,0,90,0" MaxHeight="855" VerticalAlignment="Top">
                        <StackPanel Spacing="20">
                            <!-- Header -->
                            <shadui:CardTitle Content="Purchase Summary" />
        
                            <!-- Customer Details Section -->
                            <StackPanel Spacing="10">
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <Svg
                                        Path="avares://AHON_TRACK/Assets/ProductPurchaseView/user-icon.svg"
                                        Width="28"
                                        Height="28"
                                        VerticalAlignment="Center" />
                                    <TextBlock
                                        Text="Customer Details"
                                        Classes="Caption Muted"
                                        FontSize="16"
                                        VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Margin="43,0,0,0">
                                    <TextBlock
                                        Text="{CompiledBinding CustomerFullName}"
                                        Classes="h4" />
                                    <TextBlock
                                        Text="{CompiledBinding CurrentTransactionId, StringFormat='ID: {0}'}"
                                        Classes="Caption Muted"
                                        FontSize="15" />
                                </StackPanel>
                            </StackPanel>
                            <Separator Background="{StaticResource ForegroundColor}" Margin="0,0,20,0" />
                            <StackPanel Spacing="10">
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <Svg
                                        Width="28"
                                        Height="28"
                                        Path="avares://AHON_TRACK/Assets/ProductPurchaseView/payment-method-icon.svg"
                                        VerticalAlignment="Center" />
                                    <TextBlock 
                                        Text="Payment Method" 
                                        Classes="Caption Muted"
                                        FontSize="16" 
                                        VerticalAlignment="Center" />
                                </StackPanel>
                                <Grid RowDefinitions="Auto" ColumnDefinitions="Auto Auto Auto" ColumnSpacing="15">
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <ToggleButton
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Classes="Outline"
                                            IsChecked="{CompiledBinding IsCashSelected}">
                                            <StackPanel Orientation="Vertical">
                                                <Svg
                                                    Path="avares://AHON_TRACK/Assets/ProductPurchaseView/cash-logo.svg"
                                                    Width="60"
                                                    Height="70"
                                                    Margin="15,0"
                                                    HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1">
                                        <ToggleButton
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Classes="Outline"
                                            IsChecked="{CompiledBinding IsGCashSelected}">
                                            <StackPanel Orientation="Vertical">
                                                <Svg
                                                    Path="avares://AHON_TRACK/Assets/ProductPurchaseView/GCash_logo.svg"
                                                    Width="60"
                                                    Height="70"
                                                    Margin="15,0"
                                                    HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="2">
                                        <ToggleButton
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Classes="Outline"
                                            IsChecked="{CompiledBinding IsMayaSelected}">
                                            <StackPanel Orientation="Vertical">
                                                <Svg
                                                    Path="avares://AHON_TRACK/Assets/ProductPurchaseView/Maya_logo.svg"
                                                    Width="60"
                                                    Height="70"
                                                    Margin="15,0"
                                                    HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <Separator Background="{StaticResource ForegroundColor}" Margin="0,0,20,0" />
                            <StackPanel Spacing="10">
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <Svg
                                        Width="28"
                                        Height="28"
                                        Path="avares://AHON_TRACK/Assets/ProductPurchaseView/cart-icon.svg"
                                        VerticalAlignment="Center" />
                                    <TextBlock 
                                        Text="Cart" 
                                        FontSize="16" 
                                        Classes="Caption Muted"
                                        VerticalAlignment="Center"/>
                                </StackPanel>
                                <!-- Empty Cart Message -->
                                <TextBlock 
                                    Text="{CompiledBinding EmptyCartMessage}"
                                    IsVisible="{CompiledBinding IsCartEmpty}"
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    Classes="Caption Muted"
                                    Margin="0,40" />
                                
                                <!-- Cart items will go here -->
                                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                                    <ItemsControl 
                                        ItemsSource="{CompiledBinding CartItems}"
                                        IsVisible="{CompiledBinding !IsCartEmpty}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <shadui:Card Margin="0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <Border
                                                            Grid.Column="0"
                                                            BorderThickness="1"
                                                            BorderBrush="DarkGray"
                                                            Background="Transparent"
                                                            CornerRadius="8"
                                                            Padding="4"
                                                            VerticalAlignment="Top">
                                                            <Image
                                                                Width="80"
                                                                Height="80"
                                                                Source="{CompiledBinding DisplayPoster}"
                                                                Stretch="Uniform" />
                                                        </Border>
                                                        <StackPanel
                                                            Grid.Column="1"
                                                            Orientation="Vertical"
                                                            Margin="12,0,12,0"
                                                            VerticalAlignment="Center"
                                                            Spacing="6">
                                                            <TextBlock
                                                                Text="{CompiledBinding Title}"
                                                                FontSize="14"
                                                                FontWeight="SemiBold"
                                                                TextWrapping="Wrap"
                                                                MaxWidth="280"
                                                                TextTrimming="CharacterEllipsis" />
                                                            <StackPanel Orientation="Horizontal" Spacing="12">
                                                                <TextBlock
                                                                    Text="{CompiledBinding Quantity, StringFormat='x{0}'}"
                                                                    Classes="Muted Caption"
                                                                    FontSize="13"
                                                                    FontWeight="Bold"
                                                                    VerticalAlignment="Center" />
                                                            </StackPanel>
                                                            <TextBlock
                                                                Text="{CompiledBinding FormattedTotalPrice}"
                                                                Classes="Muted Caption"
                                                                Foreground="{DynamicResource SuccessColor60}"
                                                                FontSize="13"
                                                                FontWeight="Bold"
                                                                VerticalAlignment="Center" />
                                                        </StackPanel>
                                                        <StackPanel
                                                            Grid.Column="2"
                                                            Orientation="Vertical"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Right"
                                                            Spacing="8">
                                                            <Button
                                                                Classes="Icon"
                                                                Width="36"
                                                                Height="36"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Top"
                                                                ToolTip.Tip="Remove item"
                                                                Command="{CompiledBinding $parent[UserControl].((viewModels:ProductPurchaseViewModel)DataContext).RemoveFromCartCommand, FallbackValue={x:Null}}"
                                                                CommandParameter="{Binding}">
                                                                <Svg
                                                                    Width="18"
                                                                    Height="18"
                                                                    Path="avares://AHON_TRACK/Assets/ManageBillingView/trash-2.svg" />
                                                            </Button>
                                                            <NumericUpDown
                                                                MaxWidth="120"
                                                                FormatString="N0"
                                                                Minimum="1"
                                                                Maximum="{CompiledBinding MaxQuantity}"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Top"
                                                                Value="{CompiledBinding Quantity, Mode=TwoWay}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </shadui:Card>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                            <Separator Background="{StaticResource ForegroundColor}" Margin="0,0,20,0"/>
                        </StackPanel>
                        <shadui:Card.Footer>
                            <StackPanel Orientation="Vertical" Spacing="20">
                                <Grid RowDefinitions="Auto" ColumnDefinitions="* *" IsVisible="{CompiledBinding IsPaymentPossible}">
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock
                                            Classes="h2"
                                            FontWeight="Bold"
                                            FontSize="25"
                                            Text="Total Amount:"
                                            VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,20,0">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                                            <StackPanel>
                                                <TextBlock
                                                    Text="{CompiledBinding FormattedTotalPrice}"
                                                    Foreground="{DynamicResource SuccessColor}"
                                                    Classes="h2"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <StackPanel Margin="0,0,20,0">
                                    <shadui:Card
                                        Background="{DynamicResource PrimaryColor10}"
                                        BorderThickness="0">
                                        <StackPanel>
                                            <TextBlock
                                                Text="Important Note:"
                                                Classes="Muted"
                                                FontSize="18"
                                                FontWeight="SemiBold"/>
                                            <TextBlock
                                                Text="• Strictly no refund/s"
                                                Classes="Muted"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Margin="30,10,0,0"/>
                                        </StackPanel>
                                    </shadui:Card>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                                    <Button 
                                        Classes="Primary" 
                                        Content="{CompiledBinding FormattedTotalPrice, StringFormat='Pay {0}'}" 
                                        Padding="15,0"
                                        Command="{CompiledBinding PaymentCommand}"
                                        IsEnabled="{CompiledBinding IsPaymentPossible}"/>
                                </StackPanel>
                            </StackPanel>
                        </shadui:Card.Footer>
                    </shadui:Card>
                </Grid>
                <shadui:Card MaxHeight="900">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <TextBox
                                Width="400"
                                HorizontalAlignment="Left"
                                shadui:ControlAssist.ShowProgress="{CompiledBinding IsSearchingProduct}"
                                shadui:ControlAssist.Height="40"
                                Classes="Clearable"
                                Text="{CompiledBinding ProductSearchStringResult}"
                                FontSize="15"
                                Watermark="Search products..">
								<TextBox.InnerRightContent>
									<Svg
                                        Width="20"
                                        Opacity="0.75"
                                        Path="/Assets/ManageEmployeesView/search-icon.svg" />
								</TextBox.InnerRightContent>
							</TextBox>
							<ComboBox
                                ItemsSource="{CompiledBinding ProductFilterItems}"
                                SelectedItem="{CompiledBinding SelectedProductFilterItem}"
                                shadui:ControlAssist.Height="40"
                                Width="160" />
						</StackPanel>
						<StackPanel>
							<ItemsControl ItemsSource="{CompiledBinding ProductList}">
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<UniformGrid Columns="4" RowSpacing="30" ColumnSpacing="30" Margin="-4.5,20,0,0"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<shadui:Card Width="340">
											<StackPanel>
												<Image
                                                    Width="250"
                                                    Height="250"
                                                    Source="{CompiledBinding Poster}"/>
												<Grid RowDefinitions="Auto Auto Auto" ColumnDefinitions="* Auto">
													<TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Text="{CompiledBinding Title}"
                                                        HorizontalAlignment="Left"
                                                        Width="300"
                                                        TextWrapping="WrapWithOverflow"
                                                        FontSize="17"
                                                        FontWeight="SemiBold"/>
													<TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        Text="{CompiledBinding Description}"
                                                        Width="280"
                                                        TextWrapping="WrapWithOverflow"
                                                        FontSize="14"
                                                        Classes="Caption Muted"/>
													<TextBlock
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        Margin="0,15,0,0"
                                                        HorizontalAlignment="Left"
                                                        Text="{CompiledBinding FormattedPrice}"
                                                        FontWeight="Bold"
                                                        Classes="h4"/>
													<Border
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        IsVisible="{CompiledBinding }"
                                                        Background="{CompiledBinding StockBackground}"
                                                        Padding="10,5,10,5"
                                                        BorderThickness="1"
                                                        BorderBrush="{CompiledBinding StockBorder}"
                                                        CornerRadius="6"
                                                        Margin="0,15,0,0"
                                                        HorizontalAlignment="Left">
														<TextBlock
                                                            Text="{CompiledBinding FormattedStockCount}"
                                                            FontSize="13"
                                                            FontWeight="SemiBold"
                                                            Foreground="{CompiledBinding StockForeground}" />
													</Border>
												</Grid>
												<Button
                                                    Classes="Primary"
                                                    Width="260"
                                                    Margin="0,30,0,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Svg
                                                            Width="18"
                                                            Height="18"
                                                            Margin="0,0,10,0"
                                                            VerticalAlignment="Center"
                                                            Path="avares://AHON_TRACK/Assets/ProductPurchaseView/shopping-cart-icon.svg" />
														<TextBlock Text="Add to Cart" Foreground="White" VerticalAlignment="Center"/>
													</StackPanel>
												</Button>
											</StackPanel>
										</shadui:Card>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>

							<!-- Package Items -->
							<ItemsControl
                                ItemsSource="{CompiledBinding PackageList}"
                                IsVisible="{CompiledBinding PackageList.Count}">
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<UniformGrid Columns="4" RowSpacing="30" ColumnSpacing="30" Margin="-7,0,0,0"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<shadui:Card Width="330" Height="390">
											<StackPanel>
												<shadui:CardTitle
                                                    Content="{CompiledBinding Title}" FontSize="18"
                                                    FontWeight="Bold" />
												<shadui:CardDescription Content="{CompiledBinding Description}" />
												<StackPanel Orientation="Horizontal" Margin="0,20,0,0">
													<TextBlock
                                                        FontSize="35"
                                                        FontWeight="Bold"
                                                        Text="{CompiledBinding FormattedPrice}"
                                                        VerticalAlignment="Bottom" />
													<TextBlock
                                                        Classes="Caption Muted" FontSize="17"
                                                        FontWeight="Medium" Text="{CompiledBinding Duration}"
                                                        VerticalAlignment="Center" />
												</StackPanel>
												<StackPanel>
													<ItemsControl ItemsSource="{CompiledBinding Features}">
														<ItemsControl.ItemTemplate>
															<DataTemplate>
																<StackPanel Orientation="Horizontal" Spacing="10">
																	<Svg
                                                                        Width="24"
                                                                        Height="24"
                                                                        VerticalAlignment="Center" Margin="0,4"
                                                                        Path="avares://AHON_TRACK/Assets/ManageBillingView/check-badge-icon.svg" />
																	<TextBlock
                                                                        Text="{CompiledBinding }"
                                                                        FontSize="14"
                                                                        Margin="0,4" VerticalAlignment="Center" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <Button 
                                                        Classes="Primary" 
                                                        HorizontalAlignment="Center"
                                                        Padding="65,0" 
                                                        Margin="0,30,0,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Svg 
                                                                Width="18" 
                                                                Height="18" 
                                                                Margin="0,0,10,0"
                                                                VerticalAlignment="Center"
                                                                Path="avares://AHON_TRACK/Assets/ProductPurchaseView/shopping-cart-icon.svg" />
															<TextBlock
                                                                Text="Add to Cart"
                                                                Foreground="White"
                                                                VerticalAlignment="Center" />
														</StackPanel>
													</Button>
												</StackPanel>
											</StackPanel>
										</shadui:Card>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</StackPanel>
					</StackPanel>
				</shadui:Card>
			</StackPanel>
		</ScrollViewer>
	</DockPanel>
</UserControl>