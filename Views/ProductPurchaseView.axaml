<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:converters="clr-namespace:AHON_TRACK.Converters"
    xmlns:viewModels="clr-namespace:AHON_TRACK.ViewModels"
    xmlns:scroll="using:Xaml.Behaviors.Interactions.Animated"
    xmlns:card="clr-namespace:AHON_TRACK.Components.Dashboard"
    x:DataType="viewModels:ProductPurchaseViewModel"
    mc:Ignorable="d" d:DesignWidth="1683" d:DesignHeight="1080"
    x:Class="AHON_TRACK.Views.ProductPurchaseView">

    <Design.DataContext>
        <viewModels:ProductPurchaseViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <SolidColorBrush x:Key="MutedColor" Color="#2C2F36" Opacity="0.70" />
        <SolidColorBrush x:Key="FontForeground" Color="#2C2F36" />
        <SolidColorBrush x:Key="ForegroundColor" Color="#2C2F36" />

        <SolidColorBrush x:Key="PrimaryColor" Color="#2C2F36" />
        <SolidColorBrush x:Key="PrimaryColor75" Color="#2C2F36" Opacity="0.75" />
        <SolidColorBrush x:Key="PrimaryColor50" Color="#2C2F36" Opacity="0.50" />
        <SolidColorBrush x:Key="PrimaryColor10" Color="#2C2F36" Opacity="0.10" />

        <SolidColorBrush x:Key="SuccessColor" Color="#22C55E" />
        <SolidColorBrush x:Key="SuccessColor60" Color="#22c55e" Opacity="0.6" />
        <SolidColorBrush x:Key="SuccessColor10" Color="#22c55e" Opacity="0.1" />

        <converters:IntToBoolConverter x:Key="IntToBoolConverter" />
        <converters:IntToInverseBoolConverter x:Key="IntToInverseBoolConverter" />
        <converters:DateToStringConverter x:Key="DateToStringConverter" />
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource FontForeground}"/>
        </Style>
    </UserControl.Styles>

    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="{StaticResource PageMaxWidth}"
            Margin="{StaticResource PageMargin}"
            DockPanel.Dock="Top">
            <TextBlock
                FontSize="30"
                FontWeight="SemiBold"
                Text="Item Purchase"
                Foreground="{StaticResource FontForeground}"
                Margin="90,30,0,0" />
            <TextBlock
                Classes="Caption Muted"
                FontSize="14"
                Text="Manage customer purchases of gym products and supplements"
                TextWrapping="Wrap"
                Margin="90,0" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Interaction.Behaviors>
                <scroll:VerticalScrollViewerAnimatedBehavior ScrollStepSize="150"/>
            </Interaction.Behaviors>
            <StackPanel MaxWidth="{StaticResource PageMaxWidth}" Margin="90,40,48,24" Spacing="16">
                <Grid ColumnDefinitions="* *" ColumnSpacing="30">
                    <shadui:Card Grid.Column="0" VerticalAlignment="Top" MaxHeight="480">
                        <StackPanel>
                            <shadui:CardTitle Content="Select a customer" />
                            <Grid ColumnDefinitions="Auto Auto" ColumnSpacing="10">
                                <TextBox
                                    Grid.Column="0"
                                    Width="300"
                                    HorizontalAlignment="Left"
                                    shadui:ControlAssist.ShowProgress="{CompiledBinding }"
                                    shadui:ControlAssist.Height="40"
                                    Classes="Clearable"
                                    Text="{}"
                                    FontSize="15"
                                    Watermark="Search customers...">
                                    <TextBox.InnerRightContent>
                                        <Svg
                                            Width="20"
                                            Opacity="0.75"
                                            Path="/Assets/ManageEmployeesView/search-icon.svg" />
                                    </TextBox.InnerRightContent>
                                </TextBox>
                                <ComboBox
                                    Grid.Column="1"
                                    Width="150"
                                    VerticalAlignment="Center"
                                    PlaceholderText="Filter"
                                    ItemsSource="{CompiledBinding CustomerTypeFilterItems}"
                                    SelectedItem="{CompiledBinding SelectedCustomerTypeFilterItem}"/>
                            </Grid>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                                <Interaction.Behaviors>
                                    <scroll:VerticalScrollViewerAnimatedBehavior ScrollStepSize="150"/>
                                </Interaction.Behaviors>
                                <DataGrid
                                    Height="335"
                                    Width="695"
                                    IsReadOnly="True"
                                    CanUserReorderColumns="False"
                                    CanUserSortColumns="False"
                                    GridLinesVisibility="All"
                                    ItemsSource="{CompiledBinding CustomerList}"
                                    SelectionMode="Single"
                                    Background="{DynamicResource CardBackgroundColor}"
                                    RowBackground="{DynamicResource CardBackgroundColor}"
                                    HeadersVisibility="Column"
                                    Margin="0,10,0,0">

                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="80"
                                            Header="ID"
                                            Binding="{CompiledBinding ID}" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="185"
                                            Header="First Name"
                                            Binding="{CompiledBinding FirstName}" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="185"
                                            Header="Last Name"
                                            Binding="{CompiledBinding LastName}" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="250"
                                            Header="Customer Type"
                                            Binding="{CompiledBinding CustomerType}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </StackPanel>
                    </shadui:Card>
                    <shadui:Card Grid.Column="1" Margin="0,0,100,0">
                        <DockPanel>
                            <shadui:CardTitle Content="Purchase Summary"  DockPanel.Dock="Top"/>
                            <!-- Customer Details -->
                            <Grid RowDefinitions="Auto" ColumnDefinitions="Auto" DockPanel.Dock="Left">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,20,0,5" Spacing="15">
                                        <Svg
                                            Path="avares://AHON_TRACK/Assets/ProductPurchaseView/user-icon.svg"
                                            Width="28"
                                            Height="28"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Classes="Caption Muted"
                                            FontSize="16"
                                            Text="Customer Details"
                                            VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                                        <TextBlock
                                            Text="Robert Xyz B. Lucas"
                                            Classes="h4"/>
                                        <TextBlock
                                            Text="ID: GM-2025-001234"
                                            FontSize="15"
                                            Classes="Caption Muted"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Separator 
                                Width="700" 
                                Background="{StaticResource ForegroundColor}"
                                Margin="0,-90,0,0"/>
                        </DockPanel>
                        <shadui:Card.Footer>
                            <Button Classes="Primary" Content="Pay $4,500" HorizontalAlignment="Right">
                            </Button>
                        </shadui:Card.Footer>
                    </shadui:Card>
                </Grid>
                <shadui:Card MaxHeight="900">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <TextBox
                                Width="400"
                                HorizontalAlignment="Left"
                                shadui:ControlAssist.ShowProgress="{CompiledBinding }"
                                shadui:ControlAssist.Height="40"
                                Classes="Clearable"
                                Text="{}"
                                FontSize="15"
                                Watermark="Search products..">
                                <TextBox.InnerRightContent>
                                    <Svg
                                        Width="20"
                                        Opacity="0.75"
                                        Path="/Assets/ManageEmployeesView/search-icon.svg" />
                                </TextBox.InnerRightContent>
                            </TextBox>
                            <ComboBox
                                ItemsSource="{CompiledBinding ProductFilterItems}"
                                SelectedItem="{CompiledBinding SelectedProductFilterItem}"
                                shadui:ControlAssist.Height="40"
                                Width="160" />
                        </StackPanel>
                        <Grid 
                            RowDefinitions="Auto Auto Auto Auto" 
                            ColumnDefinitions="Auto Auto Auto Auto" 
                            ColumnSpacing="30"
                            RowSpacing="30"
                            Margin="0,20,0,0">
                            <shadui:Card Grid.Row="0" Grid.Column="0" Width="340">
                                <StackPanel>
                                    <Image
                                        Width="250"
                                        Height="250"
                                        Source="avares://AHON_TRACK/Assets/ProductPurchaseView/protein-powder-display.png"/>
                                    <Grid RowDefinitions="Auto Auto Auto" ColumnDefinitions="* Auto">
                                        <TextBlock 
                                            Grid.Row="0" 
                                            Grid.Column="0"
                                            Text="Gold Standard Whey Protein"
                                            FontSize="17"
                                            FontWeight="SemiBold"/>
                                        <TextBlock 
                                            Grid.Row="1" 
                                            Grid.Column="0"
                                            Text="5lbs Premium Whey Protein"
                                            FontSize="14"
                                            Classes="Caption Muted"/>
                                        <TextBlock 
                                            Grid.Row="2" 
                                            Grid.Column="0"
                                            Margin="0,15,0,0"
                                            Text="₱2,500.00"
                                            FontWeight="Bold"
                                            Classes="h4"/>
                                        <Border Grid.Row="2" Grid.Column="1"
                                            IsVisible="{CompiledBinding }"
                                            Background="{DynamicResource SuccessColor10}"
                                            Padding="10,5,10,5"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource SuccessColor60}"
                                            CornerRadius="6"
                                            Margin="0,15,0,0"
                                            HorizontalAlignment="Left">
                                            <TextBlock
                                                Text="15 Left"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource SuccessColor}"/>
                                        </Border>
                                    </Grid>
                                    <Button
                                        Classes="Primary"
                                        Width="260"
                                        Margin="0,30,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Svg
                                                Width="18"
                                                Height="18"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Path="avares://AHON_TRACK/Assets/ProductPurchaseView/shopping-cart-icon.svg" />
                                            <TextBlock Text="Add to Cart" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </shadui:Card>
                            <shadui:Card Grid.Row="0" Grid.Column="1" Width="340">
                                <StackPanel>
                                    <Image
                                        Width="250"
                                        Height="250"
                                        Source="avares://AHON_TRACK/Assets/ProductPurchaseView/creatine-display.png"/>
                                    <Grid RowDefinitions="Auto Auto Auto" ColumnDefinitions="* Auto">
                                        <TextBlock 
                                            Grid.Row="0" 
                                            Grid.Column="0"
                                            Text="Creatine XPLODE Powder"
                                            FontSize="17"
                                            FontWeight="SemiBold"/>
                                        <TextBlock 
                                            Grid.Row="1" 
                                            Grid.Column="0"
                                            Text="1.1lbs Creatine Monohydrate"
                                            FontSize="14"
                                            Classes="Caption Muted"/>
                                        <TextBlock 
                                            Grid.Row="2" 
                                            Grid.Column="0"
                                            Margin="0,15,0,0"
                                            Text="₱1,050.00"
                                            FontWeight="Bold"
                                            Classes="h4"/>
                                        <Border Grid.Row="2" Grid.Column="1"
                                            IsVisible="{CompiledBinding }"
                                            Background="{DynamicResource SuccessColor10}"
                                            Padding="10,5,10,5"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource SuccessColor60}"
                                            CornerRadius="6"
                                            Margin="0,15,0,0"
                                            HorizontalAlignment="Left">
                                            <TextBlock
                                                Text="8 Left"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource SuccessColor}"/>
                                        </Border>
                                    </Grid>
                                    <Button
                                        Classes="Primary"
                                        Width="260"
                                        Margin="0,30,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Svg
                                                Width="18"
                                                Height="18"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Path="avares://AHON_TRACK/Assets/ProductPurchaseView/shopping-cart-icon.svg" />
                                            <TextBlock Text="Add to Cart" Foreground="White" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </shadui:Card>
                            <shadui:Card Grid.Row="0" Grid.Column="2" Width="340">
                                <StackPanel>
                                    <Image
                                        Width="250"
                                        Height="250"
                                        Source="avares://AHON_TRACK/Assets/ProductPurchaseView/preworkout-display.png"/>
                                    <Grid RowDefinitions="Auto Auto Auto" ColumnDefinitions="* Auto">
                                        <TextBlock 
                                            Grid.Row="0" 
                                            Grid.Column="0"
                                            Text="Insane Labz PSYCHOTIC"
                                            FontSize="17"
                                            FontWeight="SemiBold"/>
                                        <TextBlock 
                                            Grid.Row="1" 
                                            Grid.Column="0"
                                            Text="7.6oz PreWorkout Peaches &amp; Cream"
                                            TextWrapping="NoWrap"
                                            FontSize="14"
                                            Classes="Caption Muted"/>
                                        <TextBlock 
                                            Grid.Row="2" 
                                            Grid.Column="0"
                                            Margin="0,15,0,0"
                                            Text="₱900.00"
                                            FontWeight="Bold"
                                            Classes="h4"/>
                                        <Border Grid.Row="2" Grid.Column="1"
                                            IsVisible="{CompiledBinding }"
                                            Background="{DynamicResource WarningColor10}"
                                            Padding="10,5,10,5"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource WarningColor60}"
                                            CornerRadius="6"
                                            Margin="0,15,0,0"
                                            HorizontalAlignment="Left">
                                            <TextBlock
                                                Text="5 Left"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource WarningColor}"/>
                                        </Border>
                                    </Grid>
                                    <Button
                                        Classes="Primary"
                                        Width="260"
                                        Margin="0,30,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Svg
                                                Width="18"
                                                Height="18"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Path="avares://AHON_TRACK/Assets/ProductPurchaseView/shopping-cart-icon.svg" />
                                            <TextBlock Text="Add to Cart" Foreground="White" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </shadui:Card>
                            <shadui:Card Grid.Row="0" Grid.Column="3" Width="340">
                                <StackPanel>
                                    <Image
                                        Width="250"
                                        Height="250"
                                        Source="avares://AHON_TRACK/Assets/ProductPurchaseView/cobra-yellow-drink-display.png"/>
                                    <Grid RowDefinitions="Auto Auto Auto" ColumnDefinitions="* Auto">
                                        <TextBlock 
                                            Grid.Row="0" 
                                            Grid.Column="0"
                                            Text="Cobra Energy Drink"
                                            FontSize="17"
                                            FontWeight="SemiBold"/>
                                        <TextBlock 
                                            Grid.Row="1" 
                                            Grid.Column="0"
                                            Text="Cobra Yellow Blast Flavor"
                                            FontSize="14"
                                            Classes="Caption Muted"/>
                                        <TextBlock 
                                            Grid.Row="2" 
                                            Grid.Column="0"
                                            Margin="0,15,0,0"
                                            Text="₱35.00"
                                            FontWeight="Bold"
                                            Classes="h4"/>
                                        <Border Grid.Row="2" Grid.Column="1"
                                            IsVisible="{CompiledBinding }"
                                            Background="{DynamicResource ErrorColor10}"
                                            Padding="10,5,10,5"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource ErrorColor60}"
                                            CornerRadius="6"
                                            Margin="0,15,0,0"
                                            HorizontalAlignment="Left">
                                            <TextBlock
                                                Text="2 Left"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource ErrorColor}"/>
                                        </Border>
                                    </Grid>
                                    <Button
                                        Classes="Primary"
                                        Width="260"
                                        Margin="0,30,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Svg
                                                Width="18"
                                                Height="18"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Path="avares://AHON_TRACK/Assets/ProductPurchaseView/shopping-cart-icon.svg" />
                                            <TextBlock Text="Add to Cart" Foreground="White" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </shadui:Card>
                            <shadui:Card Grid.Row="1" Grid.Column="0" Width="340">
                                <StackPanel>
                                    <Image
                                        Width="250"
                                        Height="250"
                                        Source="avares://AHON_TRACK/Assets/ProductPurchaseView/cobra-yellow-drink-display.png"/>
                                    <Grid RowDefinitions="Auto Auto Auto" ColumnDefinitions="* Auto">
                                        <TextBlock 
                                            Grid.Row="0" 
                                            Grid.Column="0"
                                            Text="Cobra Energy Drink"
                                            FontSize="17"
                                            FontWeight="SemiBold"/>
                                        <TextBlock 
                                            Grid.Row="1" 
                                            Grid.Column="0"
                                            Text="Cobra Yellow Blast Flavor"
                                            FontSize="14"
                                            Classes="Caption Muted"/>
                                        <TextBlock 
                                            Grid.Row="2" 
                                            Grid.Column="0"
                                            Margin="0,15,0,0"
                                            Text="₱35.00"
                                            FontWeight="Bold"
                                            Classes="h4"/>
                                        <Border Grid.Row="2" Grid.Column="1"
                                            IsVisible="{CompiledBinding }"
                                            Background="{DynamicResource ErrorColor10}"
                                            Padding="10,5,10,5"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource ErrorColor60}"
                                            CornerRadius="6"
                                            Margin="0,15,0,0"
                                            HorizontalAlignment="Left">
                                            <TextBlock
                                                Text="2 Left"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource ErrorColor}"/>
                                        </Border>
                                    </Grid>
                                    <Button
                                        Classes="Primary"
                                        Width="260"
                                        Margin="0,30,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Svg
                                                Width="18"
                                                Height="18"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Path="avares://AHON_TRACK/Assets/ProductPurchaseView/shopping-cart-icon.svg" />
                                            <TextBlock Text="Add to Cart" Foreground="White" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </shadui:Card>
                        </Grid>
                    </StackPanel>
                </shadui:Card>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>