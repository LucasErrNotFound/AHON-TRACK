<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:converters="clr-namespace:AHON_TRACK.Converters"
    mc:Ignorable="d"
    d:DesignWidth="650"
    d:DesignHeight="1130"
    Width="650"
    MaxHeight="900"
    xmlns:viewModel="using:AHON_TRACK.Components.ViewModels"
    x:DataType="viewModel:SupplierDialogCardViewModel"
    x:Class="AHON_TRACK.Components.SupplierDialog.SupplierDialogCard">
    
    <Design.DataContext>
        <viewModel:SupplierDialogCardViewModel />
    </Design.DataContext>
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="MutedColor" Color="#2C2F36" Opacity="0.70" />
        <SolidColorBrush x:Key="FontForeground" Color="#2C2F36" />
        <SolidColorBrush x:Key="ForegroundColor" Color="#2C2F36" />

        <SolidColorBrush x:Key="PrimaryColor" Color="#2C2F36" />
        <SolidColorBrush x:Key="PrimaryColor75" Color="#2C2F36" Opacity="0.75" />
        <SolidColorBrush x:Key="PrimaryColor50" Color="#2C2F36" Opacity="0.50" />
        <SolidColorBrush x:Key="PrimaryColor10" Color="#2C2F36" Opacity="0.10" />

        <converters:DateOnlyToDateTimeConverter x:Key="DateOnlyToDateTimeConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBlock.h4">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style Selector="TextBlock.Muted">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style Selector="TextBlock.LabelField">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style Selector="RadioButton.FormRadio">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Regular" />
            <Setter Property="Margin" Value="0,0,15,0" />
        </Style>
    </UserControl.Styles>
    
    <Border
        Background="{DynamicResource BackgroundColor}"
        BorderBrush="{DynamicResource BorderColor}"
        BorderThickness="1"
        Padding="30">
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel Spacing="0" Margin="0,0,10,0">
                <TextBlock
                    Text="{CompiledBinding DialogTitle}"
                    Foreground="{DynamicResource FontForeground}"
                    Classes="h4" />
                <TextBlock
                    Text="{CompiledBinding DialogDescription}"
                    Classes="Muted" />
                <shadui:Card>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Svg
                                Width="26"
                                Height="26"
                                VerticalAlignment="Center"
                                Path="avares://AHON_TRACK/Assets/EquipmentInventoryView/package-icon.svg"/>
                            <TextBlock
                                Text="Supplier Information" 
                                FontSize="15"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0"/>
                        </StackPanel>
                        <Grid RowDefinitions="Auto Auto Auto Auto Auto Auto" Margin="0,20,0,0" RowSpacing="20">
                            <StackPanel Grid.Row="0">
                                <Grid ColumnDefinitions="* Auto">
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                        <TextBox
                                            Classes="Clearable"
                                            Width="250"
                                            shadui:ControlAssist.Label="Supplier Name"
                                            Watermark="e.g., San Miguel"
                                            Text="{CompiledBinding SupplierName, Mode=TwoWay}">
                                        </TextBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBox
                                            Classes="Clearable"
                                            Width="250"
                                            shadui:ControlAssist.Label="Contact Person"
                                            Watermark="e.g., Marc Torres"
                                            Text="{CompiledBinding ContactPerson, Mode=TwoWay}">
                                        </TextBox>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Row="1">
                                <Grid ColumnDefinitions="* Auto">
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                        <TextBox
                                            Classes="Clearable"
                                            Width="250"
                                            shadui:ControlAssist.Label="Email"
                                            Watermark="e.g., mardie.delacruz@yahoo.com"
                                            Text="{CompiledBinding Email, Mode=TwoWay}">
                                        </TextBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBox
                                            Classes="Clearable"
                                            Width="250"
                                            shadui:ControlAssist.Label="Phone"
                                            Watermark="e.g., 09182273847"
                                            Text="{CompiledBinding PhoneNumber, Mode=TwoWay}">
                                        </TextBox>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Row="2">
                                <TextBox
                                    Classes="Clearable"
                                    shadui:ControlAssist.Label="Products"
                                    Watermark="e.g., Cobra Energy Drink"
                                    Text="{CompiledBinding Products, Mode=TwoWay}">
                                </TextBox>
                            </StackPanel>
                            <Grid Grid.Row="3" ColumnDefinitions="* Auto">
                                <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                    <ComboBox
                                        shadui:ControlAssist.Label="Delivery Schedule"
                                        PlaceholderText="Set Schedule"
                                        Width="250"
                                        ItemsSource="{CompiledBinding DeliveryScheduleItems}"
                                        SelectedItem="{CompiledBinding SelectedDeliverySchedule}">
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Schedule Pattern" Classes="LabelField"/>
                                    <StackPanel Orientation="Horizontal" Margin="10,10,0,0" Spacing="20">
                                        <RadioButton Content="Day" GroupName="SchedulePattern" Classes="FormRadio" IsChecked="{CompiledBinding IsScheduleDeliveryByDay}"/>
                                        <RadioButton Content="Month" GroupName="SchedulePattern" Classes="FormRadio" IsChecked="{CompiledBinding IsScheduleDeliveryByMonth}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="4" ColumnDefinitions="* Auto">
                                <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                    <ComboBox
                                        shadui:ControlAssist.Label="Contract Terms"
                                        PlaceholderText="Set Contract"
                                        Width="250"
                                        ItemsSource="{CompiledBinding ContractTermsItems}"
                                        SelectedItem="{CompiledBinding SelectedContractTerms}">
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Contract Pattern" Classes="LabelField"/>
                                    <StackPanel Orientation="Horizontal" Margin="10,10,0,0" Spacing="20">
                                        <RadioButton Content="Day" GroupName="ContractPattern" Classes="FormRadio" IsChecked="{CompiledBinding IsContractTermsByDay}"/>
                                        <RadioButton Content="Month" GroupName="ContractPattern" Classes="FormRadio" IsChecked="{CompiledBinding IsContractTermsByMonth}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <StackPanel Grid.Row="5">
                                <ComboBox
                                    shadui:ControlAssist.Label="Status"
                                    IsEnabled="{CompiledBinding IsStatusEnabled}"
                                    ItemsSource="{CompiledBinding StatusFilterItems}"
                                    SelectedItem="{CompiledBinding Status, Mode=TwoWay}">
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </shadui:Card>
                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0" 
                    Spacing="20">
                    <Button
                        Classes="Secondary"
                        Command="{CompiledBinding CancelCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Svg
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                Path="avares://AHON_TRACK/Assets/EquipmentInventoryView/cancel-icon.svg" />
                            <TextBlock Text="Cancel" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button
                        Classes="Primary"
                        Command="{CompiledBinding AddSupplierCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Svg
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                Path="avares://AHON_TRACK/Assets/EquipmentInventoryView/plus-icon.svg" />
                            <TextBlock Text="Save Item" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>